{% extends 'admin_base.html.twig' %}

{% block page_title %}Dokument bearbeiten{% endblock %}

{% block page_actions %}
    <a href="{{ path('document_overview') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Zurück zur Übersicht
    </a>
    <a href="{{ path('document_view', {documentId: document.id}) }}" class="btn btn-info">
        <i class="fas fa-eye"></i> Anzeigen
    </a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-code"></i> Dokument bearbeiten: {{ document.title }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type) }}
                            {{ form_errors(form.type) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.source) }}
                            {{ form_widget(form.source) }}
                            {{ form_errors(form.source) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.overlay) }}
                            {{ form_widget(form.overlay) }}
                            {{ form_help(form.overlay) }}
                            {{ form_errors(form.overlay) }}
                        </div>

                        <div class="form-group form-check">
                            {{ form_widget(form.isReleased) }}
                            {{ form_label(form.isReleased) }}
                            <small class="form-text text-muted">{{ form_help(form.isReleased) }}</small>
                            {{ form_errors(form.isReleased) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Änderungen speichern
                            </button>
                            <a href="{{ path('document_overview') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Abbrechen
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
