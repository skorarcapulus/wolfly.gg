{% extends 'admin_base.html.twig' %}

{% block page_title %}Dokument Details{% endblock %}

{% block page_actions %}
    <a href="{{ path('document_overview') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Zurück zur Übersicht
    </a>
    <a href="{{ path('document_edit', {documentId: document.id}) }}" class="btn btn-warning">
        <i class="fas fa-edit"></i> Bearbeiten
    </a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-code"></i> {{ document.title ?? 'Unbenannt' }}</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9"><code>{{ document.id }}</code></dd>

                        <dt class="col-sm-3">Titel</dt>
                        <dd class="col-sm-9">{{ document.title ?? 'Unbenannt' }}</dd>

                        <dt class="col-sm-3">Typ</dt>
                        <dd class="col-sm-9">
                            {% if document.type == documentTypeHtml %}
                                <span class="badge badge-info">HTML/Twig</span>
                            {% elseif document.type == documentTypeCss %}
                                <span class="badge badge-primary">CSS</span>
                            {% elseif document.type == documentTypeJs %}
                                <span class="badge badge-warning">JavaScript</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">Overlay</dt>
                        <dd class="col-sm-9">
                            {% if document.overlay %}
                                <a href="{{ path('overlay_view', {overlayId: document.overlay.id}) }}">
                                    {{ document.overlay.title }}
                                </a>
                            {% else %}
                                <span class="text-muted">Kein Overlay zugewiesen</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            {% if document.isReleased %}
                                <span class="badge badge-success">Veröffentlicht</span>
                            {% else %}
                                <span class="badge badge-secondary">Entwurf</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">Erstellt am</dt>
                        <dd class="col-sm-9">{{ document.createdAt|date('d.m.Y H:i') }} Uhr</dd>

                        <dt class="col-sm-3">Aktualisiert am</dt>
                        <dd class="col-sm-9">{{ document.updatedAt|date('d.m.Y H:i') }} Uhr</dd>
                    </dl>

                    <hr>

                    <h5>Quellcode:</h5>
                    <pre style="background-color: #f4f4f4; padding: 15px; border-radius: 5px; max-height: 500px; overflow: auto;"><code>{{ document.source }}</code></pre>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
