{% extends 'admin_base.html.twig' %}
{% import 'parts/buttons.html.twig' as buttons %}

{% block page_title %}Meine Dokumente{% endblock %}

{% block page_actions %}
    <a href="{{ path('document_create') }}" class="btn btn-success">
        <i class="fas fa-plus"></i> Neues Dokument erstellen
    </a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {# Flash Messages #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fas fa-check-circle"></i> {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fas fa-exclamation-circle"></i> {{ message }}
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-code"></i> Dokument Übersicht</h3>
                </div>
                <div class="card-body">
                    {% if documents is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Noch keine Dokumente vorhanden.
                        </div>
                    {% else %}
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Titel</th>
                                    <th>Typ</th>
                                    <th>Overlay</th>
                                    <th>Status</th>
                                    <th style="width: 200px">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for document in documents %}
                                    <tr>
                                        <td>{{ document.title ?? 'Unbenannt' }}</td>
                                        <td>
                                            {% if document.type == documentTypeHtml %}
                                                <span class="badge badge-info">HTML/Twig</span>
                                            {% elseif document.type == documentTypeCss %}
                                                <span class="badge badge-primary">CSS</span>
                                            {% elseif document.type == documentTypeJs %}
                                                <span class="badge badge-warning">JavaScript</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if document.overlay %}
                                                <a href="{{ path('overlay_view', {overlayId: document.overlay.id}) }}">
                                                    {{ document.overlay.title }}
                                                </a>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if document.isReleased %}
                                                <span class="badge badge-success">Veröffentlicht</span>
                                            {% else %}
                                                <span class="badge badge-secondary">Entwurf</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ buttons.action_buttons(document.id, [
                                                {route: 'document_view', icon: 'eye', label: 'Anzeigen', class: 'primary'},
                                                {route: 'document_edit', icon: 'edit', label: 'Bearbeiten', class: 'warning'},
                                                {route: 'document_delete', icon: 'trash', label: 'Löschen', class: 'danger', confirm: true, csrf: 'delete'}
                                            ], 'documentId') }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
