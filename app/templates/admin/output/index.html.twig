{% extends 'admin_base.html.twig' %}
{% import 'parts/buttons.html.twig' as buttons %}

{% block page_title %}Overlay Ausgabe: {{ overlay.title }}{% endblock %}

{% block page_actions %}
    <a href="{{ path('overlay_overview') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Zurück zur Übersicht
    </a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-file-code"></i> HTML-Dokumente für {{ overlay.title }}</h3>
                </div>
                <div class="card-body">
                    {% set htmlDocuments = overlay.documents|filter(doc => doc.type == documentTypeHtml) %}

                    {% if htmlDocuments is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Dieses Overlay hat noch keine HTML-Dokumente.
                        </div>
                    {% else %}
                        <div class="list-group">
                            {% for document in htmlDocuments %}
                                <a href="{{ path('output_view', {overlayId: overlay.id, documentId: document.id}) }}"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">
                                            <i class="fas fa-file-code"></i> {{ document.title }}
                                        </h5>
                                        {% if document.isReleased %}
                                            <span class="badge badge-success">Veröffentlicht</span>
                                        {% else %}
                                            <span class="badge badge-secondary">Entwurf</span>
                                        {% endif %}
                                    </div>
                                    <p class="mb-1 text-muted">
                                        <small>
                                            Erstellt: {{ document.createdAt|date('d.m.Y H:i') }} Uhr
                                            | Aktualisiert: {{ document.updatedAt|date('d.m.Y H:i') }} Uhr
                                        </small>
                                    </p>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
