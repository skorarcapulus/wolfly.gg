{% extends 'admin_base.html.twig' %}

{% block page_title %}Meine Overlays{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-layer-group"></i> Overlay Ãœbersicht</h3>
                </div>
                <div class="card-body">
                    {% if overlays is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Noch keine Overlays vorhanden.
                        </div>
                    {% else %}
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th style="width: 200px">Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for overlay in overlays %}
                                    <tr>
                                        <td>{{ overlay.id }}</td>
                                        <td>{{ overlay.name ?? 'Unbenannt' }}</td>
                                        <td>
                                            <a href="{{ path('overlay_view', {overlayId: overlay.id}) }}"
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Anzeigen
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
