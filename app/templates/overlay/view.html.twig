{% extends 'admin_base.html.twig' %}

{% block page_title %}Overlay Details{% endblock %}

{% block content %}
    <div class="row mb-3">
        <div class="col-12">
            <a href="{{ path('overlay_overview') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Zurück zur Übersicht
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-layer-group"></i> {{ overlay.name ?? 'Unbenannt' }}</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">{{ overlay.id }}</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">{{ overlay.name ?? 'Unbenannt' }}</dd>
                    </dl>

                    <hr>

                    <h4>Alle Overlay Daten</h4>
                    <div class="bg-light p-3">
                        <pre>{{ dump(overlay) }}</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
